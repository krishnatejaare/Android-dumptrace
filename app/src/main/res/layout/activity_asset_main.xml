<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundstyle"
    tools:context="com.example.arekr.dumptrace.AssetMainActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:titleTextColor="@color/colorAccent"
            android:layout_width="match_parent"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Enter app name"
        android:layout_marginTop="70dp"
        android:textColor="#000000"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/appNameText"
        android:background="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"
        android:text="Username"

        android:id="@+id/textView1"
        android:layout_below="@+id/appNameText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/usernameText"
        android:background="#ffffff"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Password"

        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/passtextView"
        android:layout_below="@+id/usernameText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/usernameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/passwordText"
        android:background="#ffffff"
        android:layout_below="@+id/passtextView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passtextView"
        android:inputType="textPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/passwordText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passwordText" />



</RelativeLayout>
